@model IEnumerable<HelpingHands.Models.Donor>

@{
    ViewData["Title"] = "Donor";
}

<!-- Include CanvasJS -->
<script src="https://cdn.canvasjs.com/canvasjs.min.js"></script>

<style>
    body {
        background-color: #E5EFE4;
        padding-left: 6%; /* Optional padding adjustment */
    }

    /* Correct selector to target the chartContainer div by ID */
    #chartContainer {
        background-color: #E5EFE4; /* This won't affect the chart itself */
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-12 text-center">
            <br />
            <br />
            <br />
            <h1>Donation Statistics</h1>
            <br />
            <br />
            <br />
        </div>
    </div>


<body>
    <!-- Chart container -->
    <div id="chartContainer" style="height: 370px; width: 100%;"></div>

    <!-- JavaScript to render the chart -->
    <script>
        var dataPoints = @Html.Raw(ViewBag.DataPoints);

        var chart = new CanvasJS.Chart("chartContainer", {
            theme: "light2",
            animationEnabled: true,
            backgroundColor: "#E5EFE4", // Set the chart's background color
            data: [{
                type: "pie",
                dataPoints: dataPoints
            }]
        });

        chart.render(); // Render the chart
    </script>
</body>
