<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HelpingHands</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/mythemecss.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HelpingHands.styles.css" asp-append-version="true" />
    <style>
        .sidebar {
            height: 100vh;
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #154734;
            color: white;
            padding-top: 20px;
        }

            .sidebar .navbar-brand {
                text-align: center;
                margin-bottom: 20px; /* Ensure proper spacing from other elements */
            }

            .sidebar a {
                color: white;
                padding: 10px 15px;
                text-decoration: none;
                display: block;
                text-align: center;
                font-size: 20px;
            }

                .sidebar a:hover {
                    background-color: #E5EFE4;
                    color: #272665;
                }

        .content {
            margin-left: 250px;
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <!-- Ensure the navbar-brand is visible and centered -->
        <div class="brand-wrapper">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="css/HelpingHands.org.png" alt="Logo" style="height: 200px;" />
                <a asp-area="" asp-controller="Donor" asp-action="Index">My Profile</a>
                <br />
                <br />
                <br />
            </a>
        </div>

        <!-- Navigation links -->
        <div class="nav-links">
            <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            <a asp-area="" asp-controller="About" asp-action="Index">About Us</a>
            <a asp-area="" asp-controller="Project" asp-action="Index">Projects</a>
            <a asp-area="" asp-controller="Donation" asp-action="Index">Donations</a>

        </div>
    </div>

    <div class="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
