@model IEnumerable<HelpingHands.Models.Project>

@{
    ViewData["Title"] = "Projects";
}

<style>
    body {
        background-color: #E5EFE4;
    }
</style>

<div class="row">
    <div class="col-12 text-center">
        <br />
        <br />
        <br />
        <h1>2024 OUTREACH PROJECTS</h1>
        <br />
        <p>
            <a asp-action="Create" class="btn btn-primary">Create New Project</a>
        </p>
        <br />
        <br />
        <br />
    </div>
</div>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <!-- Adjust the column size to allow three or four cards per row -->
            <div class="col-md-4 mb-3">
                <!-- Use col-md-3 for four cards per row -->
                <div class="card mb-5">
                    <h3 class="card-header">@Html.DisplayFor(modelItem => item.ProjectName)</h3>

                    <!-- Card image or placeholder -->
                    @if (!string.IsNullOrEmpty(item.Image))
                    {
                        <img src="@item.Image" class="card-img-top" alt="@item.ProjectName" />
                    }
                    else
                    {
                        <svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180">
                            <rect width="100%" height="100%" fill="#868e96"></rect>
                            <text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text>
                        </svg>
                    }

                    <div class="card-body">
                        <h5 class="card-title">Project Details</h5>
                        <h6 class="card-subtitle text-muted">Target Amount: @Html.DisplayFor(modelItem => item.TargetAmount)</h6>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                    </div>

                    <div class="card-footer text-muted">
                        <div class="d-flex justify-content-center">
                            <a asp-area="" asp-controller="Donation" asp-action="Index" class="btn btn-warning">Make a Donation</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
